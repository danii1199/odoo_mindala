<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- ====== Single Company Layout ==========================================
============================================================================ -->
    <template id="mindala_marketing.mindala_news_complete" name="New" track="1">
        <t t-call="mindala.mindala_index">
            <h1 t-field="mindala_new.name" id="o_wblog_mindala_new"
                class="o_editable_no_shadow" data-oe-expression="mindala_new.name"
                t-att-data-blog-id="mindala_new.id" placeholder="New Title"/>
        </t>
    </template>

    <!-- ====== List Companies Layout ==========================================
============================================================================ -->
    <template id="mindala_marketing.mindala_new_list" name="News" track="1">
        <t t-call="mindala.mindala_index">
            <t t-foreach="mindala_news" t-as="new">
                <a class="badge text-primary border me-1"
                   t-att-href="new.website_url"
                   t-esc="new.name"/>
            </t>
        </t>
    </template>

</odoo>