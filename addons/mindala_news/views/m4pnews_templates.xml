<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- ====== Single Company Layout ==========================================
============================================================================ -->
    <template id="mindala_news.m4pnews_complete" name="Company" track="1">
        <t t-call="mindala.mindala_index">
            <h1 t-field="m4pnews.name" id="o_wblog_m4pnews"
                class="o_editable_no_shadow" data-oe-expression="m4pnews.name"
                t-att-data-blog-id="m4pnews.id" placeholder="New Title"/>
        </t>
    </template>

    <!-- ====== List Companies Layout ==========================================
============================================================================ -->
    <template id="mindala_news.m4pcompany_list" name="News" track="1">
        <t t-call="mindala.mindala_index">
            <t t-foreach="m4pnews" t-as="new">
                <a class="badge text-primary border me-1"
                   t-att-href="new.website_url"
                   t-esc="new.name"/>
            </t>
        </t>
    </template>

</odoo>