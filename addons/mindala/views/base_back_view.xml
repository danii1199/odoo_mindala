<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="mindala_form_view" model="ir.ui.view">
            <field name="name">mindala.form.view</field>
            <field name="model">mindala.base</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <notebook name="notebook">
                            <page string="Content" name="content">
                                <field name="active" invisible="1"/>
                                <group>
                                    <field name="name" string="Name"/>
                                    <field name="subtitle" string="Subtitle"/>
                                </group>
                                <group>
                                    <field name="content" string="Content"/>
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="mindala_view_tree" model="ir.ui.view">
            <field name="name">mindala_view_tree</field>
            <field name="model">mindala.base</field>
            <field name="arch" type="xml">
                <tree string="mindala_tree">
                    <field name="name"/>
                </tree>
            </field>
        </record>
    </data>
