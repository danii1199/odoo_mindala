<?xml version="1.0"?>
<odoo>
    <!-- Blog views -->
    <record id="mindala_author_list_view" model="ir.ui.view">
        <field name="name">mindala.author.list.view</field>
        <field name="model">mindala.author</field>
        <field name="arch" type="xml">
            <tree string="Autores">
                <field name="name"/>
                <field name="partner_id"/>
            </tree>
        </field>
    </record>
    <record id="mindala_author_form_view" model="ir.ui.view">
        <field name="name">mindala.author.form.view</field>
        <field name="model">mindala.author</field>
        <field name="arch" type="xml">
            <form string="Autor">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="partner_id"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="mindala_author_action" model="ir.actions.act_window">
        <field name="name">Autores</field>
        <field name="res_model">mindala.author</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem name="Authors"
              id="menu_author_root_global"
              sequence="100"
              parent="website.menu_website_global_configuration"
              groups="website.group_website_designer"/>

    <menuitem id="menu_author_global" parent="menu_author_root_global" name="Author" action="mindala_author_action"
              sequence="20"/>
</odoo>
