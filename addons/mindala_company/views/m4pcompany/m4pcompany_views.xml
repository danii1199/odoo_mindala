<?xml version="1.0"?>
<odoo>

    <record id="view_m4pcompany_form" model="ir.ui.view">
        <field name="name">mindala.m4pcompany.form</field>
        <field name="model">mindala.m4pcompany</field>
        <field name="arch" type="xml">
            <form string="Empresas">
                <field name="name" />
            </form>
        </field>
    </record>

    <record id="view_m4pcompany_kanban" model="ir.ui.view">
        <field name="name">mindala.m4pcompany.kanban</field>
        <field name="model">mindala.m4pcompany</field>
        <field name="arch" type="xml">
            <kanban js_class="website_pages_kanban" class="o_kanban_mobile"
                action="open_website_url" type="object" sample="1">
                <templates>
                    <t t-name="kanban-box">
                        <field name="name" />
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="view_m4pcompany_list" model="ir.ui.view">
        <field name="name">Blog Notices Pages Tree</field>
        <field name="model">mindala.m4pcompany</field>
        <field name="priority">99</field>
        <field name="arch" type="xml">
            <tree js_class="website_pages_list" type="object" action="open_website_url"
                multi_edit="1">
                <field name="name" />
            </tree>
        </field>
    </record>

    <record id="action_m4pcompany" model="ir.actions.act_window">
        <field name="name">Empresas</field>
        <field name="res_model">mindala.m4pcompany</field>
        <field name="view_mode">tree,kanban,form</field>
        <field name="view_ids"
            eval="[(5, 0, 0),
        (0, 0, {'view_mode': 'tree', 'view_id': ref('view_m4pcompany_list')}),
        (0, 0, {'view_mode': 'kanban', 'view_id': ref('view_m4pcompany_kanban')}),
    ]" />
        <field name="context">{'create_action': 'mindala_company.m4pcompany_action_add'}</field>
    </record>

    <menuitem id="menu_m4pcompany_pages"
        parent="website.menu_content"
        sequence="20"
        name="Empresas"
        action="action_m4pcompany" />

</odoo>