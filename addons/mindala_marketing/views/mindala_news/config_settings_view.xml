<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="res_config_settings_view_form_mindala" model="ir.ui.view">
            <field name="name">res.config.settings.view.form.inherit</field>
            <field name="model">res.config.settings</field>
            <field name="priority" eval="99"/>
            <field name="inherit_id" ref="mindala.res_config_settings_view_form_mindala"/>
            <field name="arch" type="xml">

                <xpath expr="//div[hasclass('mindala_settings')]" position="inside">
                    <h2>Mindala News</h2>
                    <div class="row mt16 o_settings_container">
                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_left_pane">
                                <field name="mindala_news_authors"/>
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="mindala_news_authors"/>
                                <div class="text-muted">
                                    Relate authors.
                                </div>
                            </div>
                        </div>
                    </div>
                </xpath>

            </field>
        </record>
    </data>
</odoo>