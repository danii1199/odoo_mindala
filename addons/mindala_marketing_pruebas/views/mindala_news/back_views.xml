<?xml version="1.0"?>
<odoo>

    <record id="mindala_news_form_view" model="ir.ui.view">
        <field name="name">mindala.news.form.view</field>
        <field name="model">mindala.news</field>
        <field name="arch" type="xml">
            <form string="Company">
                <sheet>
                    <div class="oe_button_box" name="button_box"
                         attrs="{'invisible': [('active', '=', False)]}">
                        <field name="is_published" widget="website_redirect_button"/>
                    </div>
                    <widget name="web_ribbon" title="Archived" bg_color="bg-danger"
                            attrs="{'invisible': [('active', '=', True)]}"/>
                    <group name="news_details">
                        <field name="active" invisible="1"/>
                        <field name="name" placeholder="New Title"/>
                        <field name="website_id" groups="website.group_multi_website"/>
                    </group>
                    <group name="publishing_details" string="Publishing Options">
                        <field name="author_id"/>
                        <field name="create_date" groups="base.group_no_one"/>
                        <field name="post_date"/>
                        <field name="write_uid"/>
                        <field name="write_date"/>
                    </group>
                    <notebook>
                        <page string="authors" name="authors">
                            <field name="authors" widget="one2many_list"
                                   context="{'default_source_model_name':'mindala.news'}"/>
                        </page>
                        <page string="Videos" name="videos">
                            <field name="videos" widget="one2many_list"
                                   context="{'default_source_model_name':'mindala.news'}"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>


    <record id="mindala_news_kanban_view" model="ir.ui.view">
        <field name="name">mindala.news.kanban.view</field>
        <field name="model">mindala.news</field>
        <field name="arch" type="xml">
            <kanban js_class="website_pages_kanban" class="o_kanban_mobile"
                    action="open_website_url" type="object" sample="1">
                <field name="name"/>
                <field name="author_id"/>
                <field name="post_date"/>
                <field name="website_url"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click d-flex flex-column">
                            <div class="row mb-auto">
                                <strong class="col-8">
                                    <span class="o_text_overflow" t-esc="record.name.value"/>
                                    <div class="text-muted" t-if="record.website_id.value"
                                         groups="website.group_multi_website">
                                        <i class="fa fa-globe me-1" title="Website"/>
                                        <field name="website_id"/>
                                    </div>
                                </strong>
                                <div class="col-8">
                                    <i class="fa fa-clock-o me-1" role="img" aria-label="New"
                                       title="Post date"/>
                                    <span t-esc="record.post_date.value"/>
                                </div>
                                <div class="col-4 text-end">
                                    <img t-if="record.author_id.raw_value"
                                         t-att-title="record.author_id.value"
                                         t-att-alt="record.author_id.value"
                                         class="oe_kanban_avatar o_image_24_cover rounded-circle"
                                         t-att-src="kanban_image('res.partner', 'avatar_128', record.author_id.raw_value)"/>
                                </div>
                            </div>
                            <div class="border-top mt-2 pt-2">
                                <field name="is_published" widget="boolean_toggle"/>
                                <t t-if="record.is_published.raw_value">Published</t>
                                <t t-else="">Not Published</t>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="mindala_news_tree_view" model="ir.ui.view">
        <field name="name">mindala.news.tree._view</field>
        <field name="model">mindala.news</field>
        <field name="priority">99</field>
        <field name="arch" type="xml">
            <tree js_class="website_pages_list" type="object" action="open_website_url"
                  multi_edit="1">
                <field name="active" invisible="1"/>
                <field name="name"/>
                <field name="website_url"/>

                <field name="author_id" optional="show"/>
                <field name="create_uid" optional="hide"/>
                <field name="write_uid" optional="hide"/>
                <field name="write_date" optional="hide"/>

                <field name="is_seo_optimized"/>
                <field name="is_published"/>

                <field name="website_id" groups="website.group_multi_website"/>
            </tree>
        </field>
    </record>

    <record id="mindala_news_action" model="ir.actions.act_window">
        <field name="name">News</field>
        <field name="res_model">mindala.news</field>
        <field name="view_mode">tree,kanban,form</field>
        <field name="view_ids"
               eval="[(5, 0, 0),
        (0, 0, {'view_mode': 'tree', 'view_id': ref('mindala_news_tree_view')}),
        (0, 0, {'view_mode': 'kanban', 'view_id': ref('mindala_news_kanban_view')}),
    ]"/>
        <field name="context">{'create_action': 'mindala_marketing.mindala_news_action_add'}</field>
    </record>

    <menuitem id="menu_mindala_news_pages"
              parent="website.menu_content"
              sequence="20"
              name="News"
              action="mindala_news_action"/>

</odoo>